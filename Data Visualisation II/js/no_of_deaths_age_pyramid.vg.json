      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "5-34 has extremely"},
        "x": {"value": 650},
        "y": {"value": 362}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "low mortality rates"},
        "x": {"value": 650},
        "y": {"value": 374}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "since 1990."},
        "x": {"value": 650},
        "y": {"value": 386}
      }
    }
  ],
  "config": {
    "view": {"stroke": null}
  }
}