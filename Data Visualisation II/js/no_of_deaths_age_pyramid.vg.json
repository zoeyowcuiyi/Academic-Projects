      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "The number of deaths"},
        "x": {"value": 650},
        "y": {"value": 100}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
