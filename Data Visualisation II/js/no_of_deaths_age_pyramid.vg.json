      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "for males than females"},
        "x": {"value": 650},
        "y": {"value": 124}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "which further proves the"},
        "x": {"value": 650},
        "y": {"value": 136}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "previous point about"},
        "x": {"value": 650},
        "y": {"value": 148}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "higher life expectancy"},
        "x": {"value": 650},
        "y": {"value": 160}
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10, "dx": -60, "align": "left"},
      "encoding": {
        "text": {"value": "for females"},
